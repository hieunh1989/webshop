   <div class="fieldWithErrors">
    <% @comment.errors.full_messages.each do |message| %>
      <div class="error">
        <p><%= message %></p>
      </div>
    <% end -%>
  </div>
  <div class="group">
    <%= f.label :_id, t("activerecord.attributes.comment._id", :default => ""), :class => :label %>
    <%= f.text_field :_id, :class => 'text_field' %>
    <span class="description">EnterEnterEnter: the id of comment</span>
  </div>

  <div class="group">
    <%= f.label :content, t("activerecord.attributes.comment.content", :default => "Content"), :class => :label %>
    <%= f.text_field :content, :class => 'text_field' %>
    <span class="description">Enter: the content of comment</span>
  </div>

  <div class="group">
    <%= f.label :product_id, t("activerecord.attributes.comment.product_id", :default => "Product"), :class => :label %>
    <%= f.text_field :product_id, disabled: true, :class => 'text_field' %>
    <span class="description">The product id contain comment</span>
  </div>

  <div class="group">
    <%= f.label :user_id, t("activerecord.attributes.comment.user_id", :default => "User"), :class => :label %>
    <%= f.text_field :user_id, disabled: true, :class => 'text_field' %>
    <span class="description">The user id created comment</span>
  </div>
        
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), admin_comments_path, :class => "text_button_padding link_button" %>
</div>