<header id="header">
  <div id="top-header">
    <div class="main main-top-header">
      <ul class="menu main-menu">
        <li>
          <%= link_to "Home", root_path, :class => "active" %>
        </li>
        <li>
          <%= link_to "New products", root_path %>
        </li>
        <li>
          <%= link_to "Contact", root_path %>
        </li>
      </ul>
      <ul class="menu user-menu">
      <% if signed_in? %>  
        <li>
          <a href="<%= destroy_user_session_path %>">Sign out</a>
        </li>
      <% else %>
        <li>
          <a href="<%= user_session_path %>">Sign in <span style="margin-left: 10px">|</span></a>
        </li>
        <li>
          <a href="<%= new_user_registration_path %>">Sign up <span style="margin-left: 10px">|</span></a>
        </li>
        <li>
          <%#= link_to 'Login', Koala::Facebook::OAuth.new.url_for_oauth_code(:callback => oauth_redirect_url) %>
          <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
        </li>
      <% end %>
      </ul>
    </div>
  </div> 
  <!-- end top-header -->
  <div class="celtral-header">
    <div class="main main-celtral-header">
      <h1 id="logo">
        <a class="logo" href="/">
          <img src="/assets/logo.PNG" width="359" height="123" />
        </a>
      </h1>
      <div class="check-cart">
      <label>
        <% link_to "Shopping cart", "root_path" %>
      </label>
      <div class="count-item">
        <%= link_to "Now in your cart",  make_payment_orders_path %>
        <span class="count"><%= @count %> items</span>
      </div>
    </div>
    </div>
  </div>
  <!-- end celtral-header -->
  <nav id="catalog-menu">
    <ul class="menu">
      <li>      
        <%= link_to "Men", products_path(:categories => "men"), 
            :class => "#{ 'active' if params[:categories] == 'men'}" %>
      </li>
      <li>
        <%= link_to "women", "/products?categories=women", 
            :class => "#{ 'active' if params[:categories] == 'women'}"%>
      </li>
      <li>
        <%= link_to "collection", products_path(:categories => "collection"), 
        :class => "#{ 'active' if params[:categories] == 'collection'}" %>
      </li>
      <li>
        <%= link_to "t-shirt", products_path(:categories => "t-shirt"), 
        :class => "#{ 'active' if params[:categories] == 't-shirt'}" %>
      </li>
      <li>
        <%= link_to "bag", products_path(:categories => "bag"), 
        :class => "#{ 'active' if params[:categories] == 'bag'}" %>
      </li>
      <li>
        <%= link_to "clothes", products_path(:categories => "clothes"), 
        :class => "#{ 'active' if params[:categories] == 'clothes'}" %>
      </li>
      <li>
        <%= link_to "hat", products_path(:categories => "hat"), 
        :class => "#{ 'active' if params[:categories] == 'hat'}" %>
      </li>
      <li>
        <%= link_to "glass", products_path(:categories => "glass"), 
        :class => "#{ 'active' if params[:categories] == 'glass'}" %>
      </li>
      <li>
        <%= link_to "skirt", products_path(:categories => "skirt"), 
        :class => "#{ 'active' if params[:categories] == 'skirt'}"%>
      </li>
    </ul>
    <div id="search-form">
      <form action="">
          <input type="text" id="search">
            <input type="submit" id="submit" value="search">
        </form>
    </div>
  </nav>
  <!-- end catalog-menu -->
</header>