<div id="content">
  <h2 id="content-title">Products</h2>
  <div class="view-product">
    <% @products.each do |p| %>
      <article class="product product-<%= cycle("odd", "even") %>">
        <div class="field field-image">
          <%= link_to "view", product_path(p.id) %>
          <%= image_tag p.product_images.sample.photo.url  %>
        </div>
        <div class="field field-title">
          <%= link_to "#{p.name}", product_path(p.id) %>
        </div>
        <div class="field field-price">
          Price: <%= p.price %><br />
        </div>
        <div class="field field-add-to-cart">
          <button class="add-to-cart" id="buy_now_btn">add to cart</button>
        </div>
      </article>
    <% end %>
  </div>
</div>
